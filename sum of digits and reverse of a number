import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int sum=0;
        int rev=0;
        while(n>0){
            int rem=n%10;
            sum+=rem;
            rev=rev*10+rem;
            n=n/10;
        }
        System.out.println("sum of digits: "+sum);
        System.out.println("reverse of the number is: "+rev);
    }
}
